#!/bin/sh

# Show wifi ðŸ“¶ and percent strength or ðŸ“¡ if none.
# Show ðŸŒ if connected to ethernet or âŽ if none.
# Show ðŸ”’ if a vpn connection is active

case $BLOCK_BUTTON in
	1) "$TERMINAL" -e nmtui; pkill -RTMIN+4 dwmblocks ;;
    2) bluetoothctl power on > /dev/null; setsid -f "$TERMINAL" -e bluetoothctl ;;
	3) notify-send "ïªž Internet module" "ïª©: no wifi connection
ïª¨: wifi connection with quality
ïªž: ethernet connected
ï€£: vpn is active
- Click to connect to wifi
- Middle click to connect to bluetooth
" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

case "$(cat /sys/class/net/w*/operstate 2>/dev/null)" in
	down) wifiicon="ïª© " ;;
	up) wifiicon="$(awk '/^\s*w/ { print "ïª¨", int($3 * 100 / 70) "% " }' /proc/net/wireless)" ;;
esac

printf " %s %s %s\n" "$wifiicon" "$(sed "s/down//;s/up/ïªž/" /sys/class/net/e*/operstate 2>/dev/null)" "$(sed "s/.*/ï€£/" /sys/class/net/tun*/operstate 2>/dev/null)"
